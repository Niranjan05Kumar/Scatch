<%- include('./partials/header') %>

    <% if(typeof error !== 'undefined' && error.length > 0) { %>
        <div class="fixed top-5 left-1/2 transform -translate-x-1/2 z-50 max-w-md w-full mx-4">
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg shadow-lg">
                <div class="flex items-center">
                    <i class="ri-error-warning-line text-xl mr-2"></i>
                    <span class="font-medium"><%= error %></span>
                </div>
            </div>
        </div>
    <% } %>

    <div class="w-full max-w-md mx-auto md:mt-10 bg-white p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold text-gray-800 mb-6 text-center">Edit Profile</h2>
        
        <form autocomplete="off" action="/users/update" method="post" enctype="multipart/form-data">
            
            <div class="text-center mb-4">
                <div class="w-24 h-24 rounded-full overflow-hidden border-4 border-gray-200 mx-auto mb-3">
                    <img src="<%= user.picture %>" alt="Current Profile"
                         class="w-full h-full object-cover">
                </div>
                <p class="text-sm text-gray-500">Current Profile Picture</p>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-2">Update Profile Picture</label>
                <input type="file" name="picture" accept="image/*"
                    class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md border-zinc-200 outline-blue-500 file:mr-4 file:py-1 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100">
            </div>

            <input type="text" placeholder="Full Name" name="fullname" value="<%= user.fullname %>"
                class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200 outline-blue-500">
            
            <div class="mb-3">
                <label class="block text-sm font-medium text-gray-700 mb-2">Email Address (Cannot be changed)</label>
                <input type="email" value="<%= user.email %>" readonly
                    class="bg-gray-100 block w-full px-3 py-2 border-[1px] rounded-md border-gray-300 outline-none cursor-not-allowed text-gray-600">
                <p class="text-xs text-gray-500 mt-1">For security reasons, email cannot be modified</p>
            </div>
            
            <input type="number" placeholder="Contact No." name="contact" value="<%= user.contact || '' %>"
                class="appearance-none bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200 outline-blue-500 [&::-webkit-outer-spin-button]:appearance-none [&::-webkit-inner-spin-button]:appearance-none">
            <div class="flex gap-3 mt-6">
                <input type="submit" value="Update Profile"
                    class="flex-1 px-5 rounded-full py-2 bg-yellow-500 hover:bg-yellow-400 text-white font-medium transition-colors duration-200">
                    
                
                <a href="/account" 
                    class="px-5 rounded-full py-2 bg-gray-300 hover:bg-gray-400 text-gray-700 font-medium transition-colors duration-200 text-center">
                    Cancel
                </a>
            </div>
        </form>
    </div>



    <%- include('./partials/footer') %>