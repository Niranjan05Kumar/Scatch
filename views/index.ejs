<%- include('./partials/header') %>
    <%- include('./partials/flashMessage') %>
        <div
            class="w-full h-[calc(100vh-155px)] flex flex-col md:flex-row px-[5vw] md:px-[10vw] gap-[18vw] lg:gap-[15vw]">
            <div class="w-full md:w-1/2 flex items-center justify-center h-auto">
                <div class="w-full">
                    <h3 class="text-3xl sm:text-4xl">welcome to <span class="text-blue-400 font-bold">Scatch</span></h3>
                    <h4 class="text-xl mb-5">create your account</h4>
                    <form autocomplete="off" action="/users/register" method="post">
                        <input
                            class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200 outline-blue-500"
                            type="text" placeholder="Full Name" name="fullname">
                        <input
                            class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200 outline-blue-500"
                            type="email" placeholder="Email" name="email">
                        <input
                            class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200 outline-blue-500"
                            type="password" placeholder="Password" name="password">
                        <input class="px-5 rounded-full py-2 mt-2 bg-blue-500 text-white" type="submit"
                            value="Create My Account">
                    </form>
                </div>
            </div>
            <div class="w-full md:w-1/2 flex items-center justify-center h-auto">
                <div class="w-full">
                    <h4 class="text-xl capitalize mb-5">login your account</h4>
                    <form autocomplete="off" action="/users/login" method="post">
                        <input
                            class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200 outline-blue-500"
                            type="email" placeholder="Email" name="email">
                        <input
                            class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200 outline-blue-500"
                            type="password" placeholder="Password" name="password">
                        <input class="px-5 block rounded-full py-2 mt-2 bg-blue-500 text-white" type="submit"
                            value="Login">
                    </form>
                    <div class="mt-4 text-sm">
                        <a href="/ownerlogin" class="text-blue-500 hover:underline">Admin/Owner Login</a>
                    </div>
                </div>
            </div>
        </div>

        <script src="/javascripts/flashMessage.js"></script>
        <%- include('./partials/footer') %>