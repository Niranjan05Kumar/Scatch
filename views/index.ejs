<%- include('./partials/header') %>
    <% if(error.length>0){ %>
        <div class="absolute top-10 left-1/2 -translate-x-1/2 -translate-y-1/2 py-2 px-4 rounded-md bg-red-200 text-red-800">
            <span class="inline-block mt-1 mb-1">
                <i class="fa-solid fa-exclamation-triangle mr-2"></i>
                <strong>Error:</strong>
                <strong class="font-semibold">Oops!</strong>
                <%= error %>
            </span>
        </div>
        <% } %>
            <div
                class="w-full min-h-screen flex flex-col md:flex-row px-[5vw] md:px-[10vw] gap-[18vw]  lg:gap-[15vw] mt-[75px] md:mt-0">
                <div class="w-full md:w-1/2 flex items-center justify-center h-auto md:h-screen">
                    <div class="w-full">
                        <h3 class="text-3xl sm:text-4xl">welcome to <span
                                class="text-blue-400 font-bold">Scatch</span></h3>
                        <h4 class="text-xl mb-5">create your account</h4>
                        <form autocomplete="off" action="/users/register" method="post">
                            <input
                                class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                                type="text" placeholder="Full Name" name="fullname">
                            <input
                                class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                                type="email" placeholder="Email" name="email">
                            <input
                                class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                                type="password" placeholder="Password" name="password">
                            <input class="px-5 rounded-full py-2 mt-2 bg-blue-500 text-white" type="submit"
                                value="Create My Account">
                        </form>
                    </div>
                </div>
                <div class="w-full md:w-1/2 flex items-center justify-center h-auto md:h-screen">
                    <div class="w-full">
                        <h4 class="text-xl capitalize mb-5">login your account</h4>
                        <form autocomplete="off" action="/users/login" method="post">
                            <input
                                class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                                type="email" placeholder="Email" name="email">
                            <input
                                class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                                type="password" placeholder="Password" name="password">
                            <input class="px-5 block rounded-full py-2 mt-2 bg-blue-500 text-white" type="submit"
                                value="Login">
                        </form>
                    </div>
                </div>
            </div>
            <%- include('./partials/footer') %>