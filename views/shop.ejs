<%- include('./partials/header') %>
    <div class="w-full h-auto flex items-start px-[5vw] md:px-[10vw] mt-[75px] md:mt-[130px]">

        <div class="hidden lg:flex lg:w-[20%] h-fit flex-col items-start pr-6">
            <!-- Sort Section -->
            <div class="w-full mb-8">
                <div class="flex items-center gap-3 mb-4">
                    <i class="ri-sort-desc text-gray-600"></i>
                    <h3 class="text-lg font-semibold text-gray-800">Sort By</h3>
                </div>
                <form action="/shop" class="w-full">
                    <select
                        class="w-full border-2 border-gray-200 rounded-lg px-4 py-2 bg-white focus:border-yellow-400 focus:outline-none transition-colors duration-200"
                        name="sortby" onchange="this.form.submit()">
                        <option value="popular">Popular</option>
                        <option value="newest">Newest</option>
                        <option value="price-low">Price: Low to High</option>
                        <option value="price-high">Price: High to Low</option>
                    </select>
                </form>
            </div>

            <!-- Categories Section -->
            <div class="w-full mb-8">
                <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center gap-2">
                    <i class="ri-list-check text-gray-600"></i>
                    Categories
                </h3>
                <div class="space-y-3">
                    <a class="block w-full py-2 px-3 rounded-lg hover:bg-yellow-50 hover:text-yellow-600 transition-all duration-200 font-medium"
                        href="">New Collection</a>
                    <a class="block w-full py-2 px-3 rounded-lg hover:bg-yellow-50 hover:text-yellow-600 transition-all duration-200"
                        href="">All Products</a>
                    <a class="block w-full py-2 px-3 rounded-lg hover:bg-yellow-50 hover:text-yellow-600 transition-all duration-200"
                        href="">Discounted Products</a>
                </div>
            </div>

            <!-- Filters Section -->
            <div class="w-full">
                <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center gap-2">
                    <i class="ri-filter-3-line text-gray-600"></i>
                    Filters
                </h3>
                <div class="space-y-3">
                    <a class="block w-full py-2 px-3 rounded-lg hover:bg-yellow-50 hover:text-yellow-600 transition-all duration-200"
                        href="">Availability</a>
                    <a class="block w-full py-2 px-3 rounded-lg hover:bg-yellow-50 hover:text-yellow-600 transition-all duration-200"
                        href="">Discount</a>
                </div>
            </div>
        </div>

        <!-- Mobile Filter Button -->
        <div class="lg:hidden fixed bottom-[5vw] right-[5vw] z-50">
            <button id="mobileFilterBtn"
                class="bg-yellow-400 hover:bg-yellow-500 text-gray-900 font-semibold py-3 px-4 rounded-full shadow-lg transition-all duration-200 flex items-center gap-2">
                <i class="ri-filter-3-line"></i>
                <span class="hidden sm:inline">Filters</span>
            </button>
        </div>

        <!-- Mobile Filter Modal -->
        <div id="mobileFilterModal" class="lg:hidden fixed inset-0 bg-black bg-opacity-50 z-50 hidden">
            <div class="absolute bottom-0 left-0 right-0 bg-white rounded-t-xl p-6 max-h-[80vh] overflow-y-auto">
                <div class="flex justify-between items-center mb-6">
                    <h2 class="text-xl font-semibold text-gray-800">Filters & Sort</h2>
                    <button id="closeMobileFilter" class="text-gray-500 hover:text-gray-700">
                        <i class="ri-close-line text-2xl"></i>
                    </button>
                </div>

                <!-- Mobile Sort -->
                <div class="mb-6">
                    <h3 class="text-lg font-semibold text-gray-800 mb-3">Sort By</h3>
                    <form action="/shop">
                        <select class="w-full border-2 border-gray-200 rounded-lg px-4 py-3 bg-white" name="sortby"
                            onchange="this.form.submit()">
                            <option value="popular">Popular</option>
                            <option value="newest">Newest</option>
                            <option value="price-low">Price: Low to High</option>
                            <option value="price-high">Price: High to Low</option>
                        </select>
                    </form>
                </div>

                <!-- Mobile Categories -->
                <div class="mb-6">
                    <h3 class="text-lg font-semibold text-gray-800 mb-3">Categories</h3>
                    <div class="space-y-2">
                        <a class="block w-full py-3 px-4 rounded-lg bg-gray-50 hover:bg-yellow-50 hover:text-yellow-600 transition-all duration-200"
                            href="">New Collection</a>
                        <a class="block w-full py-3 px-4 rounded-lg bg-gray-50 hover:bg-yellow-50 hover:text-yellow-600 transition-all duration-200"
                            href="">All Products</a>
                        <a class="block w-full py-3 px-4 rounded-lg bg-gray-50 hover:bg-yellow-50 hover:text-yellow-600 transition-all duration-200"
                            href="">Discounted Products</a>
                    </div>
                </div>

                <!-- Mobile Filters -->
                <div class="mb-6">
                    <h3 class="text-lg font-semibold text-gray-800 mb-3">Filters</h3>
                    <div class="space-y-2">
                        <a class="block w-full py-3 px-4 rounded-lg bg-gray-50 hover:bg-yellow-50 hover:text-yellow-600 transition-all duration-200"
                            href="">Availability</a>
                        <a class="block w-full py-3 px-4 rounded-lg bg-gray-50 hover:bg-yellow-50 hover:text-yellow-600 transition-all duration-200"
                            href="">Discount</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="w-full lg:w-[80%] flex flex-col gap-5 h-auto overflow-y-auto">
            <!-- Products Grid Container -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 md:gap-6 lg:p-0">

                <!-- Product Card -->
                <div
                    class="w-full max-w-sm mx-auto bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                    <!-- Product Image -->
                    <div
                        class="w-full h-48 md:h-52 bg-gradient-to-br from-zinc-200 to-zinc-300 flex items-center justify-center relative overflow-hidden">
                        <img class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                            src="/api/placeholder/200/200" alt="Product Image">
                    </div>

                    <!-- Product Info -->
                    <div class="bg-gradient-to-r from-yellow-400 to-yellow-500 p-4">
                        <div class="flex justify-between items-start">
                            <div class="flex-1">
                                <h3 class="text-base md:text-lg font-semibold text-gray-900 line-clamp-1 mb-1">
                                    Premium Product Name
                                </h3>
                                <div class="flex items-center gap-2">
                                    <span class="text-lg md:text-xl font-bold text-gray-900">
                                        ₹999
                                    </span>
                                    <span class="text-sm text-gray-600 line-through">
                                        ₹1299
                                    </span>
                                </div>
                            </div>
                            <!-- Add to Cart Button -->
                            <button
                                class="w-8 h-8 md:w-9 md:h-9 flex items-center justify-center rounded-full bg-white hover:bg-gray-100 transition-colors duration-200 shadow-md ml-3">
                                <i class="ri-add-line text-gray-700 text-lg"></i>
                            </button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script src="/javascripts/shop.js"></script>

    <%- include('./partials/footer') %>